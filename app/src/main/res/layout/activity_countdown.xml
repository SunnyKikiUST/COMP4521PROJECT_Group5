<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_countdown"
    tools:context=".CountDown">
<!--
        original:
        android:layout_width="291dp"
        android:layout_height="262dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
-->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="291dp"
        android:layout_height="262dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="62dp"
        android:scaleX="0.96"
        android:scaleY="0.96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/cat_after" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="308dp"
        android:layout_height="86dp"
        android:background="@drawable/box"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Meow ~ Success is not final,\n failure is not fatal: It is the \n courage to continue that counts."
        android:textAlignment="center"
        android:textColor="#6C5737"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="19dp"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-4dp"
        android:rotation="180"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/triangle" />

    <Button
        android:id="@+id/btngiveup2"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#FFFBEF"
        android:fontFamily="@font/montserrat"
        android:text="Pause"
        android:textColor="#6C5737"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6C5737"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btngiveup"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#FFB494"
        android:fontFamily="@font/montserrat"
        android:text="Give up! :("
        android:textColor="#6C5737"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6C5737"
        app:strokeWidth="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>